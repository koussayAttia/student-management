pipeline {
    agent any

    tools {
        jdk 'JAVA_Home'
        maven 'M2_HOME'
    }

    environment {
        GIT_CREDENTIALS_ID       = '14409463'
        GIT_BRANCH               = 'main'
        GIT_URL                  = 'https://github.com/koussayAttia/student-management.git'

        // ‚ö†Ô∏è √† adapter si ton repo Docker Hub a un autre nom
        DOCKERHUB_REPO           = 'koussayattia/student-management'
        DOCKERHUB_CREDENTIALS_ID = 'dockerhub'
    }

    stages {

        stage('Checkout') {
            steps {
                echo "R√©cup√©ration du projet depuis GitHub (d√©p√¥t priv√©)..."
                git branch: env.GIT_BRANCH,
                    url: env.GIT_URL,
                    credentialsId: env.GIT_CREDENTIALS_ID
            }
        }

        stage('Build (clean & package, sans tests)') {
            steps {
                echo "Build Maven avec skip des tests..."
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Build de l'image Docker..."
                // on se place dans le dossier o√π il y a le Dockerfile
                dir('student-management') {
                    sh 'docker build -t $DOCKERHUB_REPO:$BUILD_NUMBER .'
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                echo "Push de l'image Docker sur Docker Hub..."
                withCredentials([usernamePassword(
                    credentialsId: env.DOCKERHUB_CREDENTIALS_ID,
                    usernameVariable: 'DOCKERHUB_USER',
                    passwordVariable: 'DOCKERHUB_PASS'
                )]) {
                    sh '''
                        echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin
                        docker push $DOCKERHUB_REPO:$BUILD_NUMBER
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build r√©ussi üéâ'
        }
        failure {
            echo 'Build √©chou√© ‚ùå'
        }
    }
}
