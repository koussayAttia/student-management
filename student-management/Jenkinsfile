pipeline {
    agent any

    tools {
        jdk 'JAVA_Home'     // noms EXACTS dans Global Tool Configuration
        maven 'M2_HOME'
    }

    environment {
        GIT_CREDENTIALS_ID      = '14409463'  // ID de tes credentials GitHub
        GIT_BRANCH              = 'main'
        GIT_URL                 = 'https://github.com/koussayAttia/student-management.git'

        // À ADAPTER selon ton compte Docker Hub
        DOCKERHUB_REPO          = 'koussayattia/student-management'   // ex: username/nom-image
        DOCKERHUB_CREDENTIALS_ID = 'dockerhub'                        // ID des credentials Docker Hub dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Récupération du projet depuis GitHub (dépôt privé)..."
                git branch: env.GIT_BRANCH,
                    url: env.GIT_URL,
                    credentialsId: env.GIT_CREDENTIALS_ID
            }
        }

        stage('Build (clean & package, sans tests)') {
            steps {
                echo "Build Maven avec skip des tests..."
                dir('student-management') {   // garde ça si ton pom.xml est bien dans ce dossier
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Build de l'image Docker..."
                script {
                    // On construit l'image avec un tag basé sur le numéro de build Jenkins
                    dockerImage = docker.build("${env.DOCKERHUB_REPO}:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                echo "Push de l'image Docker sur Docker Hub..."
                script {
                    docker.withRegistry('https://registry.hub.docker.com', env.DOCKERHUB_CREDENTIALS_ID) {
                        dockerImage.push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build réussi'
        }
        failure {
            echo 'Build échoué'
        }
    }
}
